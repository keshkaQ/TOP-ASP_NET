@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h2>Переключение между базами</h2>

    <div class="mb-4">
        <form method="post">
            <button type="submit"
                    asp-page-handler="SwitchDatabase"
                    asp-route-database="Postgres"
                    class="btn @(Model.CurrentDatabase == "Postgres" ? "btn-primary" : "btn-outline-primary")">
                Postgres
            </button>
            <button type="submit"
                    asp-page-handler="SwitchDatabase"
                    asp-route-database="PostgresDocker"
                    class="btn @(Model.CurrentDatabase == "PostgresDocker" ? "btn-primary" : "btn-outline-primary")">
                Docker Postgres
            </button>
            <button type="submit"
                    asp-page-handler="SwitchDatabase"
                    asp-route-database="SqlServer"
                    class="btn @(Model.CurrentDatabase == "SqlServer" ? "btn-primary" : "btn-outline-primary")">
                SQL Server
            </button>
        </form>

        <div class="mt-2">
            <p>Текущая база: <strong>@Model.CurrentDatabase</strong></p>
        </div>
    </div>

    <table class="table table-hover table-striped mb-0">
        <thead class="table-light">
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Address</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                </tr>
            }

            @if (!Model.Users.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        Нет данных в выбранной базе
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>